# .env.example

# IBM Event Streams (Kafka) Configuration
# Get these from IBM Cloud Console → Event Streams → Service Credentials
KAFKA_BROKERS=broker-0-xxxxx.kafka.svc01.us-south.eventstreams.cloud.ibm.com:9093,broker-1-xxxxx.kafka.svc01.us-south.eventstreams.cloud.ibm.com:9093
KAFKA_USERNAME=token
KAFKA_PASSWORD=your-api-key-here
KAFKA_TOPIC=orders

# IBM Cloud Object Storage (COS) Configuration
# Get these from IBM Cloud Console → Object Storage → Service Credentials
COS_API_KEY=your-cos-api-key-here
COS_INSTANCE_CRN=crn:v1:bluemix:public:cloud-object-storage:global:a/xxxxx:xxxxx::
COS_ENDPOINT=s3.us-south.cloud-object-storage.appdomain.cloud
COS_BUCKET=your-bucket-name-here

# Optional: Uncomment for debugging
# KAFKA_DEBUG=all
